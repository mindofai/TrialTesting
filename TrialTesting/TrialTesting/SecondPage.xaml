<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrialTesting.SecondPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid BackgroundColor="#136068">
            <Label Text="This is Page 2" FontSize="24" Style="{StaticResource NormalLabelStyle}"/>
        </Grid>
        <StackLayout Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="You navigated to next page" FontSize="16" Style="{StaticResource NormalLabelStyle}" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
            <Button Text="Go back" Style="{StaticResource NormalButtonStyle}" Clicked="Button_Clicked"/>
        </StackLayout>
    </Grid>
</ContentPage>